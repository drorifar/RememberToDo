<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    style="@style/Theme.AppCompat">

    <EditText android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/task_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp" />

    <!-- Clock Reminder -->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/add_clock_reminder"
        android:src="@drawable/alarm_clock"
        android:adjustViewBounds="true"
        android:layout_alignTop="@+id/add_image_button"
        android:layout_alignRight="@+id/imageView1"
        android:layout_alignEnd="@+id/imageView1" />

    <!-- Add Image -->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/add_image_button"
        android:src="@drawable/camera"
        android:adjustViewBounds="true"
        android:layout_above="@+id/imageView1"
        android:layout_alignLeft="@+id/add_image_button"
        android:layout_alignStart="@+id/add_image_button"
        android:layout_marginBottom="55dp" />

    <!-- Priority -->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/priority_button"
        android:src="@drawable/exclamation_mark_gray"
        android:adjustViewBounds="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageView1"
        android:layout_marginRight="30dp" />

    <!-- add_voice_button -->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/add_voice_button"
        android:src="@drawable/microphone"
        android:adjustViewBounds="true"
        android:layout_alignTop="@+id/destination_reminder_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="27dp" />

    <!-- destination_reminder_button -->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/location_reminder_button"
        android:src="@drawable/map"
        android:adjustViewBounds="true"
        android:layout_marginTop="46dp"
        android:layout_marginLeft="31dp"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/add_image_button" />

    <Button
        android:id="@+id/create_task_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_create"
        android:layout_gravity="center_horizontal"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignTop="@+id/imageView1"
        android:layout_toLeftOf="@+id/priority_button_button" />

</RelativeLayout>