<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myapp="http://schemas.android.com/apk/res-auto">
    <!-- Add new task, should appear as action button -->
    <item android:id="@+id/action_addTask"
        android:icon="@drawable/ic_action_new_event"
        android:title="@string/action_add"
        myapp:showAsAction="ifRoom|withText" />
    <!-- Show only high priority -->
    <item android:id="@+id/action_priority"
        android:title="@string/show_important"
        myapp:showAsAction="never" />
    <!-- Show All Tasks -->
    <item android:id="@+id/action_show_all"
        android:title="@string/show_all"
        myapp:showAsAction="never" />
